<Window x:Class="TPA_Desktop_CC.Human_Resource_Management_Team.HRMCandidateEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPA_Desktop_CC"
        mc:Ignorable="d"
        Title="Kong Bu Bank（孔布 银行）" Height="355.138" Width="398.466" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                        <RotateTransform Angle="-28.301" CenterY="0.5" CenterX="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF9FA5D5" Offset="0"/>
                <GradientStop Color="#FFE8F5C8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="BACK" HorizontalAlignment="Left" Height="30" Margin="16,281,0,0" VerticalAlignment="Top" Width="66" FontSize="20" BorderBrush="{x:Null}" Background="#FFD47070" Foreground="#FFE0ACAC" FontWeight="Bold" Click="back"/>
        <Label Content="CANDIDATE EMPLOYEE" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FF491515"/>
        <DataGrid x:Name="datagrid" HorizontalAlignment="Left" Height="144" Margin="10,47,0,0" VerticalAlignment="Top" Width="363" BorderBrush="{x:Null}" RowHeight="30" ColumnWidth="100" Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue" IsReadOnly="True" VerticalContentAlignment="Center" SelectionChanged="selectitem"/>
        <Label x:Name="notxt" Content="Currently, there is no candidate employee!" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="#FF963853" Width="363" HorizontalContentAlignment="Center"/>
        <Button x:Name="addbtn" Content="ADD CANDIDATE" HorizontalAlignment="Left" Margin="130,216,0,0" VerticalAlignment="Top" Width="142" Height="47" Background="#FF8FF4AA" BorderBrush="{x:Null}" Foreground="#FF23085F" FontSize="16" Click="addnew"/>
        <Button x:Name="deleteallbtn" Content="DELETE ALL" HorizontalAlignment="Left" Margin="277,281,0,0" VerticalAlignment="Top" Width="95" Height="30" Background="#FFF4F18F" BorderBrush="{x:Null}" Foreground="#FF5F4A08" FontSize="16" Click="deleteall"/>

    </Grid>
</Window>
